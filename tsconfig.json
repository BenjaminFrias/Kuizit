{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["server.ts"],
	"exclude": ["node_modules"]
}
